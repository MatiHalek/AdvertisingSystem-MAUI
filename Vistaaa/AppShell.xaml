    xmlns:local="clr-namespace:Vistaaa"
    Shell.FlyoutBehavior="Flyout" Shell.NavBarHasShadow="True" NavigationPage.BackButtonTitle="Wstecz" BackgroundColor="SeaGreen"
    Title="Vistaaa - serwis ogłoszeniowy" >
