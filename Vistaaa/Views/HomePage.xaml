                        </Border>
                        <Label FontFamily="SignikaNegative" Text="ofert od sprawdzonych pracodawców" FontAttributes="Bold" FontSize="28" TextColor="White"/>

                    </VerticalStackLayout>
                </Border>
            </AbsoluteLayout>
            <Grid Padding="30" RowSpacing="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <VerticalStackLayout Spacing="20">
                    <Label FontFamily="SignikaNegative" Text="Jesteśmy dostępni na systemach:" FontAttributes="Bold" FontSize="28" TextColor="DodgerBlue"/>
                    <VerticalStackLayout Spacing="10">
                        <Label LineBreakMode="WordWrap">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span FontFamily="FAB" FontSize="25" Text="&#xf17a; "/>
                                    <Span FontFamily="SignikaNegative" FontSize="20" Text="Windows 10 21H2 i nowszych, Windows 11"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label LineBreakMode="WordWrap">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span FontFamily="FAB" FontSize="25" Text="&#xf179; "/>
                                    <Span FontFamily="SignikaNegative" FontSize="20" Text="macOS 10.15 Catalina i nowszych"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label LineBreakMode="WordWrap">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span FontFamily="FAB" FontSize="25" Text="&#xf179; "/>
                                    <Span FontFamily="SignikaNegative" FontSize="20" Text="iOS 10 i nowszych"/>
                                </FormattedString>
                            </Label.FormattedText>
