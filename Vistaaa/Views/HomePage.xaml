                        <Label LineBreakMode="WordWrap">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span FontFamily="FAB" FontSize="25" Text="&#xf17b; "/>
                                    <Span FontFamily="SignikaNegative" FontSize="20" Text="Android 5.0 Lollipop i nowszych"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </VerticalStackLayout>
                </VerticalStackLayout>
                <AbsoluteLayout Grid.Column="1">
                    <Image HeightRequest="200" Source="employer.jpg" HorizontalOptions="Center" ZIndex="2">
                        <Image.Clip>
                            <EllipseGeometry Center="100, 100"
                             RadiusX="80"
                             RadiusY="80" />
                        </Image.Clip>
                    </Image>
                    <Ellipse Margin="20" HeightRequest="160" Fill="SeaGreen" WidthRequest="160" HorizontalOptions="Center" VerticalOptions="Center" >
                        <Ellipse.Shadow>
                            <Shadow Brush="#555" Offset="7, 7" Opacity="0.6" />
                        </Ellipse.Shadow>
                    </Ellipse>
                </AbsoluteLayout>
                <VerticalStackLayout Grid.Row="1" Grid.ColumnSpan="2" Spacing="10">
                    <Label FontFamily="SignikaNegative" Text="Znajdź dla siebie wymarzoną pracę!" FontAttributes="Bold" FontSize="28" TextColor="White"/>
                    <Border>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="45"/>
                        </Border.StrokeShape>
                        <Grid BackgroundColor="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label FontFamily="SignikaNegative" Text="test" FontSize="30" Padding="15" TextColor="Gray" x:Name="searchAnimationLabel"/>
                            <Border Grid.Column="1" StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="45"/>
                                </Border.StrokeShape>
                                <Button Clicked="Button_Clicked" FontFamily="SignikaNegative" FontAttributes="Bold" BackgroundColor="SeaGreen" TextColor="White" Text="Wyszukaj" FontSize="25" Padding="25, 0"/>
                            </Border>
